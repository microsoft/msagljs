{
  "compilerOptions": {
    "target": "es2018",
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "lib": ["dom", "es2018"],
    "importHelpers": true,
    "noEmit": true,
    "esModuleInterop": true,
    "paths": {
      "msagl-js": ["./modules/core/src"],
      "msagl-js/drawing": ["./modules/core/src/drawing"],
      "@msagl/renderer": ["./modules/renderer/src"]
    }
  },
  "include": ["./modules/**/src/**/*", "./modules/**/test/**/*"]
}

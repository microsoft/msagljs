{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2018",
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "lib": ["dom", "es2018"],
    "importHelpers": true,
    "downlevelIteration": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "typeRoots": [
    "./node_modules/@types/",
    "./node_modules/@danmarshall/deckgl-typings"
  ]
}
